{% assign your_blog_handle_here = 'pecan-recipes' %}
{% assign how_many_articles_to_show = 15 %}
<div class="blog-sidebar">
  <div class="author-block">
    {% if section.settings.author_title != blank %}
    <h2>{{ section.settings.author_title | escape }}</h2>
    {% endif %}
    {% if section.settings.author_image != blank %}
    <img src="{{ section.settings.author_image | img_url: '480x' }}"/>
    {% endif %}
    {% if section.settings.author_des != blank %}
    <span>{{ section.settings.author_des | escape }}</span>
    {% endif %}
    <div class="sharethis-inline-follow-buttons"></div>
    {% comment %}
    <ul class="list--inline">
      {%- if section.settings.social_facebook_link != blank -%}
      <li>
        <a class="social-icons__link" href="{{ section.settings.social_facebook_link | escape }}" aria-describedby="a11y-external-message">
          {%- include 'icon-facebook' -%}
          <span class="icon__fallback-text">Facebook</span>
        </a>
      </li>
      {%- endif -%}
      {%- if section.settings.social_twitter_link != blank -%}
      <li>
        <a class="social-icons__link" href="{{ section.settings.social_twitter_link | escape }}" aria-describedby="a11y-external-message">
          {%- include 'icon-twitter' -%}
          <span class="icon__fallback-text">Twitter</span>
        </a>
      </li>
      {%- endif -%}
      {%- if section.settings.social_pinterest_link != blank -%}
      <li>
        <a class="social-icons__link" href="{{ section.settings.social_pinterest_link | escape }}" aria-describedby="a11y-external-message">
          {%- include 'icon-pinterest' -%}
          <span class="icon__fallback-text">Pinterest</span>
        </a>
      </li>
      {%- endif -%}
      {%- if section.settings.social_instagram_link != blank -%}
      <li>
        <a class="social-icons__link" href="{{ section.settings.social_instagram_link | escape }}" aria-describedby="a11y-external-message">
          {%- include 'icon-instagram' -%}
          <span class="icon__fallback-text">Instagram</span>
        </a>
      </li>
      {%- endif -%}
      {%- if section.settings.social_tumblr_link != blank -%}
      <li>
        <a class="social-icons__link" href="{{ section.settings.social_tumblr_link | escape }}" aria-describedby="a11y-external-message">
          {%- include 'icon-tumblr' -%}
          <span class="icon__fallback-text">Tumblr</span>
        </a>
      </li>
      {%- endif -%}
      {%- if section.settings.social_snapchat_link != blank -%}
      <li>
        <a class="social-icons__link" href="{{ section.settings.social_snapchat_link | escape }}" aria-describedby="a11y-external-message">
          {%- include 'icon-snapchat' -%}
          <span class="icon__fallback-text">Snapchat</span>
        </a>
      </li>
      {%- endif -%}
      {%- if section.settings.social_youtube_link != blank -%}
      <li>
        <a class="social-icons__link" href="{{ section.settings.social_youtube_link | escape }}" aria-describedby="a11y-external-message">
          {%- include 'icon-youtube' -%}
          <span class="icon__fallback-text">YouTube</span>
        </a>
      </li>
      {%- endif -%}
      {%- if section.settings.social_vimeo_link != blank -%}
      <li>
        <a class="social-icons__link" href="{{ section.settings.social_vimeo_link | escape }}" aria-describedby="a11y-external-message">
          {%- include 'icon-vimeo' -%}
          <span class="icon__fallback-text">Vimeo</span>
        </a>
      </li>
      {%- endif -%}
      {%- if template.name == 'blog' or template.name == 'article' -%}
      <li>
        <a class="social-icons__link" href="{{ shop.url }}{{ blog.url }}.atom">
          {%- include 'icon-rss' -%}
          <span class="icon__fallback-text">RSS</span>
        </a>
      </li>
      {%- endif -%}
    </ul>
    {% endcomment %}
  </div>
  <div class="category-block">
    {% if section.settings.category_title != blank %}
    <h2>{{ section.settings.category_title | escape }}</h2>
    {% endif %}
    <ul class="blog-list">
      {% for tag in blog.all_tags %}
      <li>
        <a href="{{ blog.url }}/tagged/{{ tag | handle }}">{{ tag }}</a>
      </li>
      {% endfor %}
    </ul>
  </div>
  <div class="recent-block">
    {% if section.settings.latest_blog_posts != blank %}
    <h2>{{ section.settings.latest_blog_posts | escape }}</h2>
    {% endif %}
    <ul class="blog-list">
      {% for article in blogs[your_blog_handle_here].articles limit: how_many_articles_to_show %}
      <li> {{ article.title | link_to: article.url }} </li>
      {% endfor %}
    </ul>
  </div>
</div>
